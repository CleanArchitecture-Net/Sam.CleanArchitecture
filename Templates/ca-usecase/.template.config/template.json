{
  "$schema": "http://json.schemastore.org/template",
  "author": "Saman Azadi",
  "classifications": [
    "Clean Architecture"
  ],
  "name": "Clean Architecture Use Case",
  "description": "Create a new use case (query or command)",
  "identity": "Clean.Architecture.UseCase.CSharp",
  "groupIdentity": "Clean.Architecture.UseCase",
  "shortName": "ca-usecase",
  "tags": {
    "language": "C#",
    "type": "item"
  },
  "sourceName": "CleanArchitectureUseCase",
  "preferNameDirectory": false,
  "symbols": {
    "DefaultNamespace": {
      "type": "bind",
      "binding": "msbuild:RootNamespace",
      "replaces": "CleanArchitecture.Application",
      "defaultValue": "CleanArchitecture.Application"
    },
    "domainName": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "replaces": "DomainName",
      "fileRename": "DomainName"
    },
    "useCaseType": {
      "type": "parameter",
      "datatype": "choice",
      "isRequired": true,
      "choices": [
        {
          "choice": "command",
          "description": "Create a new command"
        },
        {
          "choice": "query",
          "description": "Create a new query"
        }
      ],
      "description": "The type of use case to create"
    },
    "serviceName": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "replaces": "ServiceName",
      "fileRename": "ServiceName"
    },
    "createCommand": {
      "type": "computed",
      "value": "(useCaseType == \"command\")"
    },
    "createQuery": {
      "type": "computed",
      "value": "(useCaseType == \"query\")"
    },
    "returnType": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "replaces": "object",
      "defaultValue": "object"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(createCommand)",
          "exclude": [
            "DomainName/Queries/**/*"
          ]
        },
        {
          "condition": "(createQuery)",
          "exclude": [
            "DomainName/Commands/**/*"
          ]
        }
      ]
    }
  ]
}